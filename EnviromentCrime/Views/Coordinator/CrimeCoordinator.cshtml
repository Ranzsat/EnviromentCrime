@{
    Layout = "_CoordinatorLayout";
}
@model Department

<h2>Detaljer för ärendet</h2>
<p class="info">Du är inloggad som samordnare</p>
@await Component.InvokeAsync("CrimeDetails", ViewBag.ID)

<section id="bottomColumn">
    <h3>Redigera ärende</h3>
    <form asp-controller="Coordinator" asp-action="AddDepartmentAction" method="post">
        <p>
            Ange enhet:
            <select name="department" asp-for="DepartmentId" asp-items="@(new SelectList(ViewBag.ListOfDepartments, "DepartmentId", "DepartmentName"))">
                <option selected="selected">Välj</option>
            </select>
        </p>
        <p><input class="button" type="submit" value="Spara" /></p>
    </form>
</section>