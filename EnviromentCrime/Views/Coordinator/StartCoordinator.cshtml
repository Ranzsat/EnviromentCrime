@{
    Layout = "_CoordinatorLayout";
}

@model EFCrimeRepository

<h2>Ärenden</h2>
<p class="info">Du är inloggad som sammordnare: @ViewBag.Name</p>

<table id="managerForm">
    <tr>
        <td class="label">Välj status:</td>
        <td class="label">Välj avdelning:</td>
        <td>&nbsp;</td>
        <td class="label">Ärendenummer:</td>
        <td>&nbsp;</td>
    </tr>
    <tr>
        <td>
            <select name="status">
                <option selected="selected">Välj alla</option>
                @foreach (ErrandStatus errandStatus in Model.ErrandStatuses)
                {
                    <option value="@errandStatus.StatusId">@errandStatus.StatusName</option>
                }
            </select>
        </td>
        <td>
            <select name="department">
                <option selected="selected">Välj alla</option>
                @foreach (Department departments in Model.Departments)
                {
                    <option value="@departments.DepartmentId">@departments.DepartmentName</option>
                }
            </select>
        </td>
        <td><input class="button" type="submit" value="Hämta lista" /></td>
        <td><input name="casenumber" /></td>
        <td><input class="button" type="submit" value="Sök" /></td>
    </tr>
</table>

<!--Nedan ser man en lista på ärenden-->

@await Component.InvokeAsync("CrimeList")